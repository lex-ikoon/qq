///------------------------------------------------------------------------------------------------


--float noise_fstat ( float pos, f, offset; int turb; float rough, atten, amp )
{

    float sample = pos * f - offset;
    float noise;

    noise = onoise(sample, turb, rough, atten);
    noise = noise * amp;

    noise = smooth(-1,1,noise);

    return noise;

}

